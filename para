 Exercício 9 🌐
 algoritmo "SerieFibonacci"
 var
   termo1, termo2, proximo, N: inteiro
inicio
   termo1 <- 0
   termo2 <- 1
   escreval(termo1)
   escreval(termo2)
   para N de 3 ate 15 faca
      proximo <- termo1 + termo2
      escreval(proximo)
      termo1 <- termo2
      termo2 <- proximo
   fimpara
fimalgoritmo 

Exercício 10 🌐 algoritmo"ConversaoCelsiusFahrenheit"
 var
   celsius, fahrenheit: real
inicio
   para celsius de 10 ate 100 passo 10 faca
      fahrenheit <- (9 * celsius + 160) / 5
      escreval(celsius, "ºC = ", fahrenheit:2:2, "ºF")
   fimpara
fimalgoritmo 

Exercício 11 🌐
algoritmo "MaiorEMenorValor"
 var
   valor, maior, menor: inteiro
inicio
   maior <- -32000
   menor <- 32000
   escreval("Digite valores inteiros positivos. Para parar, digite um valor negativo.")
   repita
      leia(valor)
      se valor >= 0 entao
         se valor > maior entao
            maior <- valor
         fimse
         se valor < menor entao
            menor <- valor
         fimse
      fimse
   ate valor < 0
   escreval("O maior valor informado foi: ", maior)
   escreval("O menor valor informado foi: ", menor)
fimalgoritmo

